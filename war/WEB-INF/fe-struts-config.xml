<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://struts.apache.org/dtds/struts-config_1_1.dtd">
<struts-config>
	<form-beans>
		<form-bean name="pageForm" type="com.spshop.fe.formbeans.PageFormBean"></form-bean>
	</form-beans>
	
	<global-exceptions>
        
    </global-exceptions>
	<global-forwards>
		
	</global-forwards>

	<action-mappings>
		<action
			path="/"
			type="com.spshop.fe.actions.PageAction"
			name="pageForm"
			scope="request">
			<forward name="Success" path="/index.jsp" />
		</action>
		
		<action 
			path="/c/*" 
			type="com.spshop.fe.actions.PageAction" 
			name="pageForm"
			scope="request">
			<forward name="Success" path="/jsp/categories.jsp"></forward>
			<forward name="Special" path="/jsp/market.jsp"></forward>
		</action>
		

		
		<action 
			path="/createAccount" 
			type="com.spshop.fe.actions.RegisterAction" 
			name="pageForm"
			scope="request">
			<forward name="Success" path="/"></forward>
			<forward name="Failure" path="/createAccount.jsp"></forward>
		</action>
		
		<action 
			path="/login" 
			type="com.spshop.fe.actions.LoginAction" 
			name="pageForm"
			scope="request">
			<forward name="Success" path="/"></forward>
			<forward name="Failure" path="/createAccount.jsp"></forward>
		</action>
		
		<action 
			path="/recoveryPassword" 
			type="com.spshop.fe.actions.RecoveryPasswordAction" 
			name="pageForm"
			scope="request">
			<forward name="Success" path="/"></forward>
		</action>
		
		<action 
			path="/shoppingCart" 
			type="com.spshop.fe.actions.ShoppingCartAction" 
			name="pageForm"
			scope="request">
			<forward name="Success" path="/jsp/cart.jsp"></forward>
		</action>
		
		<action 
			path="/removeItemFromCart" 
			type="com.spshop.fe.actions.RemoveItemAction" 
			name="pageForm"
			scope="request">
			<forward name="Success" path="/jsp/cart.jsp"></forward>
		</action>
		
		<action 
			path="/updateItemQty" 
			type="com.spshop.fe.actions.UpdateItemQtyAction" 
			name="pageForm"
			scope="request">
			<forward name="Success" path="/jsp/cart.jsp"></forward>
		</action>
		
		<action 
			path="/checkOut" 
			type="com.spshop.fe.actions.OrderCheckOutAction" 
			name="pageForm"
			scope="request">
			<forward name="Success" path="/jsp/orderCheckOut.jsp"></forward>
		</action>
		
		<action 
			path="/pay" 
			type="com.spshop.fe.actions.PayAction" 
			name="pageForm"
			scope="request">
			<forward name="Success" path="/jsp/bankReturn.jsp"></forward>
		</action>
		
		
		<!-- For Tom to add product action -->
			<action
				path="/*"
				type="com.spshop.fe.actions.ProductAction"
				name="pageForm"
				scope="request">
				<forward name="Success" path="/jsp/goods.jsp"></forward>
			</action>

		<action path="/editProfile" type="com.spshop.fe.actions.EditProfileAction"
			name="pageForm" scope="request">
			<forward name="Success" path="/jsp/editProfile.jsp"></forward>
		</action>
		
<!-- 		<action  -->
<!-- 			path="/keywords/*"  -->
<!-- 			type="com.spshop.fe.actions.PageAction"  -->
<!-- 			name="pageForm" -->
<!-- 			scope="request"> -->
<!-- 			<forward name="Success" path="/jsp/goods.jsp"></forward> -->
<!-- 		</action> -->
	</action-mappings>
	<message-resources parameter="FE_ApplicationResources" null="true"/>
</struts-config>
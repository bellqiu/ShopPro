		<property name="name" length="100"></property>
		<property name="createDate"></property>
		<property name="updateDate"></property>
		<!--  <many-to-one name="site" class="Site" insert="false" update="true"></many-to-one>-->
		
		<property name="content"></property>
		<property name="type" type="FeedBackType"></property>
		
	</class>
	

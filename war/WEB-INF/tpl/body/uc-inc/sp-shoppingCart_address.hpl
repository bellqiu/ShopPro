<div class="scart_con">
	<div class="scart_step2"></div>
	<div class="scart_header2">
		Fill Your Address
	</div>
	<div>
		<div>
			<div class="box_sub_item_title">Shipping to this address</div>
			<#assign "showSubmitBtn"=false >
			<#include "fragments/address.hpl">
		</div>
	</div>
	<div>
		<div>
			<div class="box_sub_item_title">Billing address</div>
			<b> <input name="IsSame" id="IsSame" type="checkbox" value="">Same as shipping address</b>
			<#assign "showSubmitBtn"=false >
			<#include "fragments/address.hpl">
		</div>
	</div>
	<div class="scart_header2">
		Select Shipping Methods
	</div>
	<ul class="scart_c">
       <li class="scart_c_w_l"><input name="shippingMethon" type="radio" checked="checked">Standard Shipping</li>
       <li class="scart_c_w_m">Normally 10 - 15 days</li>
       <li class="scart_c_w_r">0</li>
    </ul>
    
    <ul class="scart_c">
       <li class="scart_c_w_l"><input name="shippingMethon" type="radio">Expedited Shipping</li>
       <li class="scart_c_w_m">Normally 2 - 5 days</li>
       <li class="scart_c_w_r">US$ 295.3</li>
    </ul>
    <p class="clearBoth"></p>
    <div class="separator"></div>
    <dl class="scart_summary_list">
			<dd >Item Sub total:<span class="red">USD 199.99</span></dd>
			<dd >Coupon:<span class="red">USD 199.99</span></dd>
			<dd >Shipping Cost:<span class="red">USD 199.99</span></dd>
			<dd class="separator"><dd>
			<dd class="red">
				<b>Grand Total:<span id="GrabdTotal">USD 896.91</span></b>
			</dd>
			<dd class="red">
			<span>
				<a href="/uc/shoppingCart">Back >> </a>
				<input	type="button" class="button_01" value="Processed to Pay" ></span>
			</dd>
		</dl>
    
	<p class="clearBoth"></p>
</div>
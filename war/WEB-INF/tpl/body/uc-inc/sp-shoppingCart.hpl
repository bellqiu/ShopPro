<div class="scart_con">
	<div class="scart_step1"></div>
	<ul class="scart_c scart_header">
			<li class="scart_thumbnail">&nbsp;</li>
			<li class="scart_desc">
				Item(s)
			</li>
			<li class="scart_item_w2">Item Price</li>
			<li class="scart_item_w3">Quantity
			</li>
			<li class="scart_item_w4">Amount</li>
			<li class="scart_item_w5">Operation
			</li>
	</ul>
	<#list currentOrder!userView.cart.order.items as item>
		<ul class="scart_c">
			<li class="scart_thumbnail"><a target="_blank"
				href="${siteView.host}/${item.product.name}"><img
					src="${siteView.imageHost}${item.product.images[0].smallUrl}"></a>
				<input type="hidden" id="hdl_p722115" value="1753577"> <input
				type="hidden" id="hdl_weight722115" value="2.00"></li>
			<li class="scart_desc">
				<dl>
					<dt>
						<a target="_blank"
							href="${siteView.host}/${item.product.name}">
							${item.product.title}
							</a>
					</dt>
					<dd class="scart_opt">
						<ul>
							<li>Size : US 6</li>
							<li>Color : Champagne</li>
						</ul>
						<p class="clearBoth"></p>
					</dd>
				</dl>
			</li>
			<li class="scart_item_w2"><span class="red">${(userView.cart.order.currency)!''}</span> <span>156.69</span></li>
			<li class="scart_item_w3">
				<div class="increase">
				</div> <input type="text"
				class="increase_input" value="1" size="4">
				<div class="decrease"></div>
			</li>
			<li class="scart_item_w4"><span class="red">US$</span> <span>156.69</span><input
				type="hidden" value="156.69"></li>
			<li class="scart_item_w5">
				<div class="sp_cart_remove">
					<a href="javascript:Remove(722115)">Remove</a>
				</div>
			</li>
			<li class="scart_item_w6">Processing Time : The item(s) will be ready for
				shipment within 24-30 calendar days after payment is received.</li>
		</ul>
	</#list>
	<p class="clearBoth"></p>
	
	<div class="scart_summary">
		<div class="scart_summary_coupon_code">
				<div class="box_sub_item_title">Have a Coupon Code? Add it here</div>
				<div>
					<p>Enter code (if applicable) then click "Apply":</p>
					<div>
						Code:
						<input name="" type="text" class="txt_input">
						<input	type="button" class="button_01" value="Apply" >
					</div>
				</div>
				<div class="box_sub_item_title">Leave your special requirements</div>
				<div>
					<p>Leave your special requirements here:</p>
					<textarea maxlength="800" rows="4" class="order_msg"></textarea>
				</div>
			
		</div>

		<dl class="scart_summary_list">
			<dd >Item Sub total:<span class="red">USD 199.99</span></dd>
			<dd >Coupon:<span class="red">USD 199.99</span></dd>
			<dd class="separator"><dd>
			<dd class="red">
				<b>Grand Total:<span id="GrabdTotal">USD 896.91</span></b>
			</dd>
			<dd class="red">
			<span>
				<a href="###">Continue shopping>> </a>
				<input	type="button" class="button_01" value="Processed to Pay"></span>
			</dd>
		</dl>

	</div>
	<p class="clearBoth"></p>
</div>
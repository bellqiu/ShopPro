<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.contentPanel {
   		 	border: 1px solid #999;
 		 }
 		 .captionPanel {
 		 	margin: 2px;
 		 	text-align: center;
 		 }
	</ui:style>
	<g:HTMLPanel>
		<g:FlowPanel ui:field="contentPanel" styleName="{style.contentPanel}"></g:FlowPanel>
		<g:FlowPanel styleName="{style.contentPanel}">
			<g:Button width="5em" height="2em" ui:field="closeButton" text="Close"/>
		</g:FlowPanel>
	</g:HTMLPanel>
</ui:UiBinder> 
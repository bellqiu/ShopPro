<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.spshop.admin.client.rich">
	<ui:style>
		
	</ui:style>
	<g:HTMLPanel>
		<g:Grid>
			<g:row>
				<g:customCell>
					<g:Label ui:field="cacheStatus"/>
				</g:customCell>
				<g:customCell>
					<g:FormPanel ui:field="updateCatlogForm" method="METHOD_GET">
						<g:Button width="100%" height="100%" text="Update category cache" ui:field="updateCategoryCache"/>
					</g:FormPanel>
				</g:customCell>
			</g:row>
		</g:Grid>
		<g:ScrollPanel width="100%" height="500px">
			<g:HTMLPanel>
				<g:Label text="Side bar"/>
				<p1:RichText height="300px" width="800px"/>
				<g:Button text="Save Side bar"/>
				<g:Label text="Footer"/>
				<p1:RichText height="300px" width="800px"/>
				<g:Button text="Save Footer"/>
			</g:HTMLPanel>
		</g:ScrollPanel>
	</g:HTMLPanel>
</ui:UiBinder> 
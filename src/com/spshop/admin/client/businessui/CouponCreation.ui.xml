<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.google.gwt.user.datepicker.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.bg{
			background-color: #ddd;
		}
	</ui:style>
	<g:HTMLPanel styleName="{style.bg}" width="100%" height="100%">
		<g:Grid>
			<g:row>
				<g:customCell>
					<g:Label text="ID:"/>
				</g:customCell>
				<g:customCell>
					<g:LongBox/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Name:"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Coupon Code:"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Type:"/>
				</g:customCell>
				<g:customCell>
					<g:HorizontalPanel>
						<g:RadioButton name="cutOff" text="Specific value" checked="true"/>
						<g:RadioButton name="cutOff" text="Cut off"/>
					</g:HorizontalPanel>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Start Date:"/>
				</g:customCell>
				<g:customCell>
					<p1:DateBox/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="End Date:"/>
				</g:customCell>
				<g:customCell>
					<p1:DateBox/>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Available Type:"/>
				</g:customCell>
				<g:customCell>
					<g:HorizontalPanel>
						<g:RadioButton name="onetime" text="One time" checked="true"/>
						<g:RadioButton name="onetime" text="Multi times"/>
					</g:HorizontalPanel>
				</g:customCell>
			</g:row>
			<g:row>
				<g:customCell>
					<g:Label text="Used times"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox/>
				</g:customCell>
			</g:row>
		</g:Grid>
	</g:HTMLPanel>
</ui:UiBinder> 
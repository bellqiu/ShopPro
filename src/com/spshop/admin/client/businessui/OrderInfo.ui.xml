<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.spshop.admin.client.businessui">
	<ui:style>
		.outer {
			border: 1px solid #999;
			cursor: pointer;
			width: 100%;
		}
	
		.header {
			gwt-image: 'gradient';
			background-color: #d3d6dd;
			table-layout: fixed;
			width: 100%;
			height: 2EM;
			border: 0px;
		}
		
		.header td {
			font-weight: bold;
			text-shadow: #fff 0 2px 2px;
			padding: 2px 0 1px 10px;
			border: 0px;
		}
		
		.table {
			table-layout: fixed;
			width: 100%;
		}
		
		.table td {
			padding: 2px 0 2px 10px;
			border-bottom: 1px solid #FFF;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:SplitLayoutPanel styleName='{style.outer}' height="100%">
			<g:north size="50">
				<g:Grid>
					<g:row>
						<g:customCell>
							<g:Label text="Order Stauts" />
						</g:customCell>
						<g:customCell>
							<p1:OrderStatusSelection ui:field="orderStatus"/>
						</g:customCell>
						<g:customCell>
							<g:Button text="Save" ui:field="button"/>
						</g:customCell>
					</g:row>
				</g:Grid>
			</g:north>
			<g:center>
				<g:DockLayoutPanel unit="EM" width="100%" height="100%">
					<g:north size="2">
						<g:FlexTable styleName="{style.header}" ui:field="orderHeader"></g:FlexTable>
					</g:north>
					<g:center>
						<g:ScrollPanel>
							<g:FlexTable styleName="{style.table}" ui:field="orderTable"></g:FlexTable>
						</g:ScrollPanel>
					</g:center>
				</g:DockLayoutPanel>
			</g:center>
		</g:SplitLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 
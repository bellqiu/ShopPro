<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.spshop.admin.client.businessui">
	<ui:style>
		.outer {
			border: 1px solid #999;
			cursor: pointer;
			width: 100%;
		}
	
		.header {
			gwt-image: 'gradient';
			background-color: #d3d6dd;
			table-layout: fixed;
			width: 100%;
			height: 2EM;
			border: 0px;
		}
		
		.header td {
			font-weight: bold;
			text-shadow: #fff 0 2px 2px;
			padding: 2px 0 1px 10px;
			border: 0px;
		}
		
		.orderInfo{
			width:100%;
		}
		
		.table {
			table-layout: fixed;
			width: 100%;
		}
		
		.table td {
			padding: 2px 0 2px 10px;
			border-bottom: 1px solid #FFF;
		}
		.items{
			width: 60px;
			margin-right: 10px;
			font-weight: bolder;
		}
		.value{
			margin-right: 20px;
		}
		.odd{
			background-color: #b3b3b3;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:SplitLayoutPanel styleName='{style.outer}' height="100%" width="100%">
			<g:north size="280">
				<g:VerticalPanel styleName="{style.orderInfo}" width="100%">
				<g:Grid>
					<g:row>
						<g:customCell>
							<g:Label text="Order Stauts" />
						</g:customCell>
						<g:customCell>
							<p1:OrderStatusSelection ui:field="orderStatus"/>
						</g:customCell>
						<g:customCell>
							<g:Button text="Save" ui:field="button"/>
						</g:customCell>
					</g:row>
				</g:Grid>
				<g:Grid width="100%" borderWidth="1">
					<g:row>
						<g:customCell>
							<g:Label text="Order Id" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="orderId" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="OrderType" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="orderType" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="TotalPrice" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="totalPrice" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="City" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="city" styleName="{style.value}"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="DePrice" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="dePrice" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="Currency" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="currency" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="CreateDate" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="createDate" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label styleName="{style.value}"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Name" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="customerName" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="State" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="state" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="Address1" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="customerAddr1" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="Address2" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="customerAddr2" styleName="{style.value}"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Tel" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="customerTel" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="Country" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="customerCountry" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="Email" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="customerEmail" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="ZIP" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="customerZIP" styleName="{style.value}"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="Message" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="customerMsg" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="Gender" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="customerGender" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label styleName="{style.value}"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="DeliverCode" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="deliverCode" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="DeliverCompany" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="deliverCompany" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="DeliverPhone" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="deliverPhone" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label styleName="{style.value}"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="BillingName" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="bName" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="BillingGender" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="bGender" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="BillingAddress1" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="bAddr1" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="BillingAddress2" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="bAddr2" styleName="{style.value}"/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:Label text="BillingCity" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="bCity" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="BillingZIP" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="bZIP" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:Label text="BillingPhone" styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label ui:field="bPhone" styleName="{style.value}"/>
						</g:customCell>
						<g:customCell>
							<g:HTML wordWrap="true" ui:field="orderURL">orderURL</g:HTML>
						</g:customCell>
						<g:customCell>
							<g:Label styleName="{style.items}"/>
						</g:customCell>
						<g:customCell>
							<g:Label styleName="{style.value}"/>
						</g:customCell>
					</g:row>
				</g:Grid>
				</g:VerticalPanel>
			</g:north>
			<g:center>
				<g:DockLayoutPanel unit="EM" width="100%" height="100%">
					<g:north size="2">
						<g:FlexTable styleName="{style.header}" ui:field="orderHeader"></g:FlexTable>
					</g:north>
					<g:center>
						<g:ScrollPanel>
							<g:FlexTable styleName="{style.table}" ui:field="orderTable"></g:FlexTable>
						</g:ScrollPanel>
					</g:center>
				</g:DockLayoutPanel>
			</g:center>
		</g:SplitLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 
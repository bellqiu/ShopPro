<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:p1="urn:import:com.spshop.admin.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
		.bg2{
			background-color: #FFF;
		}
		
		.bg3{
			background-color: #BBB;
			padding: 2px;
		}
		
		.bg4{
			background-color: #FFF;
		}
		
		.bg5{
			background-color: #CCC;
			position: relative;
			top: 0PX;
			left: 0PX;
			Opacity:.5;
			z-index: 999;
			float: left;
		}
		.container{
			background-color: #FFBBBB;
			padding: 0px;
			margin: 0px;
		}
	</ui:style>
	<g:HTMLPanel>
		<g:DockLayoutPanel unit="EM" width="100%" height="100%" styleName="{style.bg2}">
			<g:north size="3">
				<g:MenuBar ui:field="menuBar">
				</g:MenuBar>
			</g:north>
			<g:center>
				<g:SplitLayoutPanel>
					<g:west size="500">
						<g:SplitLayoutPanel width="100%" height="100%" styleName="{style.bg2}" ui:field="searchSplitPanel">
								<g:north size="80">
									<p1:SearchContainer ui:field="searchContainer"></p1:SearchContainer>
								</g:north>
								<g:center>
										<g:HTMLPanel width="100%"  height="100%" >
										</g:HTMLPanel>
								</g:center>
						</g:SplitLayoutPanel>
					</g:west>
					<g:center>
						<g:DockLayoutPanel unit="EM" width="100%" height="100%" styleName="{style.bg2}">
								<g:center>
									<g:HTMLPanel width="100%" height="100%">
										<g:ScrollPanel width="100%" height="100%" ui:field="containerScroll">
											<g:HTMLPanel width="100%" ui:field="container" height="100%" styleName="{style.container}">
												aasdfasdasdasd
											</g:HTMLPanel>
										</g:ScrollPanel>
									</g:HTMLPanel>
								</g:center>
						</g:DockLayoutPanel>
					</g:center>
				</g:SplitLayoutPanel>
			</g:center>
			<g:south size="2">
					<g:HTMLPanel styleName="{style.bg3}" ui:field="statusBar">
					</g:HTMLPanel>
			</g:south>
		</g:DockLayoutPanel>
	</g:HTMLPanel>
</ui:UiBinder> 
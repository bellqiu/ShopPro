<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:w="urn:import:com.google.gwt.widget.client" xmlns:p1="urn:import:com.google.gwt.user.cellview.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel width="100%">
		<g:VerticalPanel width="100%">
		<g:HorizontalPanel>
		<g:Grid ui:field="stardardCriteriaPanel" width="100%">
			<g:row>
				<g:customCell>
					<g:ListBox visibleItemCount="1" selectedIndex="1"/>
				</g:customCell>
				<g:customCell>
					<g:InlineLabel text="ID:"/>
				</g:customCell>
				<g:customCell>
					<g:LongBox/>
				</g:customCell>
				<g:customCell>
					<g:InlineLabel text="Name:"/>
				</g:customCell>
				<g:customCell>
					<g:TextBox/>
				</g:customCell>
				<g:customCell>
					<w:TextButton text="Go">New button</w:TextButton>
				</g:customCell>
			</g:row>
		</g:Grid>
		</g:HorizontalPanel>
		<g:HorizontalPanel>
		<g:DisclosurePanel ui:field="disclosurePanel">
			<g:header>Advance Search</g:header>
			<g:HorizontalPanel>
				<g:Grid ui:field="searchAdvanceContainer">
					<g:row>
						<g:customCell>
							<g:FlexTable/>
						</g:customCell>
						<g:customCell>
							<g:Button/>
						</g:customCell>
					</g:row>
					<g:row>
						<g:customCell>
							<g:TextBox/>
						</g:customCell>
					</g:row>
				</g:Grid>
			</g:HorizontalPanel>
		</g:DisclosurePanel>
		</g:HorizontalPanel>
		</g:VerticalPanel>
	</g:HTMLPanel>
</ui:UiBinder> 